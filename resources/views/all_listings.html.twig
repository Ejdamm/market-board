{% extends 'templates/base.html.twig' %}

{% block content %}
  <div class="list-group">
    <div class="list-group-item font-weight-bold">
      <div class="row">
        <span class="px-1 col-8">TÃ¤vling</span>
        <span class="px-1 col-2 text-center">Styckpris</span>
        <span class="px-1 col-2 text-right">Tillagd</span>
      </div>
    </div>
    {% for listing in listings %}
      <a class="list-group-item" href="/listings/{{ listing.id }}">
        <div class="row">
          <span class="px-1 col-8">{{ listing.subcategory_name }}</span>
          <span class="px-1 col-2 text-center">{{ listing.price / listing.quantity }}</span>
          <span class="px-1 col-2 text-right">{{ listing.created_at }}</span>
        </div>
      </a>
    {% endfor %}
  </div>

  {% if pagination.needed %}
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center py-4">
        {% for i in 1..pagination.lastpage %}
        <li class="page-item"><a class="{% if i == pagination.page %}active{% endif %} page-link" href="?page={{ i }}">{{ i }}</a></li>
        {% endfor %}
      </ul>
    </nav>
  {% endif %}



{% endblock %}
